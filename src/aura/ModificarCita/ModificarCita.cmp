<aura:component implements="forceCommunity:availableForAllPageTypes,force:hasRecordId,force:hasSObjectName" access="global" controller="ModificarCitaController">    
    <lightning:notificationsLibrary aura:id="notifLib"/>

    <aura:attribute name="esModificable" type="Boolean" default="false" />
   <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <!--Spinner -->
    <div aura:id="modalProcessing" class="busy-backdrop busy-backdrop--open hideDiv">
        <div class="slds-spinner--brand slds-spinner slds-spinner--large" aria-hidden="false" role="alert">
            <div class="slds-spinner__dot-a"></div>
            <div class="slds-spinner__dot-b"></div>
        </div>
    </div>

    <lightning:buttonGroup>
        <lightning:button label="Modificar Cita" onclick="{! c.modificarCita }" disabled="{!v.esModificable}" />
        <lightning:button label="Anular Cita" onclick="{! c.anularCitaServicio }" disabled="{!v.esModificable}" />
    </lightning:buttonGroup>

</aura:component>