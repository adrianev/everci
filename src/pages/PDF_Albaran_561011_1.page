<head>
	<style type="text/css" media="print">
		@page {
			margin-top:28mm;
			margin-left:10mm;
			margin-right:10mm;
			margin-bottom:19mm;
			@top-center {
				content: element(header);
			}
			@top-right {
				content: element(pages);
			}
			@bottom-left {
				content: element(footer);
			}
			@left-middle {
				content: element(vertext);
			}
		}
		@page:first {
			margin-top:22mm;
			margin-left:10mm;
			margin-right:10mm;
			margin-bottom:20mm;
		}
