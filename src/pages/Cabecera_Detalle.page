	<apex:form styleClass="cabecera reparable"
		rendered="{!Case.Type == $Label.CAS_TIPO_REPARABLE}">
		<!-- <apex:outputText value="Siniestro Reparable" /> -->
		 <apex:outputText value="{!$Label.CAS_TIPOACT_REPARABLE}"/>
	</apex:form>
	<apex:form styleClass="cabecera mixto"
		rendered="{!Case.Type == $Label.CAS_TIPO_MIXTO}">
		<apex:outputText value="{!$Label.CAS_TIPOACT_MIXTO}" />
	</apex:form>
	<apex:form styleClass="cabecera indemnizable"
		rendered="{!Case.Type == $Label.CAS_TIPO_INDEMNIZABLE && Case.Parent == null}">
		<!-- <apex:outputText value="Siniestro Indemnizable" /> -->
		<apex:outputText value="{!$Label.CAS_TIPOACT_INDEMNIZABLE}"/>
	</apex:form>
	<apex:form styleClass="cabecera mixto"
		rendered="{!Case.Type == $Label.CAS_TIPO_INDEMNIZABLE && Case.Parent != null}">
	   <!--  <apex:outputText value="Siniestro Mixto: Parte Indemnizable" /> -->
	   <apex:outputText value="{!$Label.CAS_TIPOACT_MIXTO_PARTE_INDEMNIZABLE}"/>
	</apex:form>
	<apex:form styleClass="cabecera preventivo"
		rendered="{!Case.CAS_FOR_RTDevName__c == $Label.RT_CAS_SOLIC_B2B_B2B2C}">
		<!-- <apex:outputText value="Solicitud de Servicio B2B/B2B2C" /> -->
		<apex:outputText value="{!$Label.RT_CAS_SOLIC_B2B_B2B2C_TEXTO}"/>
	</apex:form>
	<apex:form styleClass="cabecera correctivo"
		rendered="{!Case.Type == $Label.B2B_TIPO_CORRECTIVO}">
		<!-- <apex:outputText value="Servicio B2B/B2B2C: Correctivo" /> -->
		<apex:outputText value="{!$Label.CAS_TIPOACT_SERV_B2B_B2B2C_CORRECTIVO}"/>
	</apex:form>
	<apex:form styleClass="cabecera preventivo"
		rendered="{!Case.Type == $Label.B2B_TIPO_PREVENTIVO}">
		<!-- <apex:outputText value="Servicio B2B/B2B2C: Preventivo" />-->
		<apex:outputText value="{!$Label.CAS_TIPOACT_SERV_B2B_B2B2C_PREVENTIVO}"/>
	</apex:form>
	<apex:form styleClass="cabecera Solicitud_b2b_b2b2c"
		rendered="{!Case.CAS_FOR_RTDevName__c == $Label.RT_CAS_SOL_RECLAMACION}">
	   <!--  <apex:outputText value="Solicitud de Reclamación" /> -->
		<apex:outputText value="{!$Label.RT_CAS_SOL_RECLAMACION_TEXTO}"/>
	</apex:form>
	<apex:form styleClass="cabecera reparable "
		rendered="{!Case.CAS_FOR_RTDevName__c == $Label.RT_CAS_RECLAMACION}">
		<apex:outputField value="{!Case.CAS_SEL_Estado_Expediente__c}" />
	</apex:form>
	<apex:form styleClass="cabecera Solicitud_b2b_b2b2c "
		rendered="{!Case.CAS_FOR_RTDevName__c == $Label.RT_CAS_SOLIC_SINIESTRO}">
		<!-- <apex:outputText value="Solicitud de Siniestro" /> -->
		<apex:outputText value="{!$Label.RT_CAS_SOLIC_SINIESTRO_TEXTO}"/>
	</apex:form>
	<apex:form styleClass="cabecera Asistencia "
		rendered="{!Case.CAS_FOR_RTDevName__c == $Label.RT_CAS_B2C}">
		<!--  <apex:outputText value="Asistencia" /> -->
		<apex:outputText value="{!$Label.RT_CAS_B2C_TEXTO}" />
	</apex:form>
	<apex:form styleClass="cabecera Asistencia "
		rendered="{!Case.CAS_FOR_RTDevName__c == $Label.RT_CAS_SOLIC_B2C}">
		<apex:outputText value="{!$Label.RT_CAS_SOLIC_B2C_TEXTO}" />
	</apex:form>
	<apex:form styleClass="cabecera Manitas "
		rendered="{!Case.Type == $Label.CAS_TIPO_MANITAS}">
		<!--  <apex:outputText value="Siniestro Manitas" />-->
		 <apex:outputText value="{!$Label.CAS_TIPOACT_SINI_MANITAS}" />
	</apex:form>
	<apex:form styleClass="cabecera Siniestro Servicio Especial Reparable "
		rendered="{!Case.Type == $Label.CAS_TIPO_SERVICIO_ESPECIAL_REP}">
		<!-- <apex:outputText value="Siniestro Servicio Especial Reparable" />-->
		 <apex:outputText value="{!$Label.CAS_TIPOACT_SINI_ESPECIAL_REPARABLE}" />
	</apex:form>
</apex:page>