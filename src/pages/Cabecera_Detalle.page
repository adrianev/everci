<apex:page standardController="Case">
	<style>
.cabecera {
	font-weight: bold;
	font-size: 1.3em;
	width: 100%;
	text-align: Center;
	margin: 10px 0 10px 0;
	padding: 10px 0 10px 0;
}

.reparable {
	color: #de1a1a; /*Rojo*/
	background: radial-gradient(rgba(255, 0, 0, 0.32), rgba(255, 0, 0, 0.05),
		rgba(0, 0, 0, 0));
}

.mixto {
	color: #1e63b7; /*Azul*/
	background: radial-gradient(rgba(0, 103, 230, 0.32),
		rgba(0, 103, 230, 0.05), rgba(0, 0, 0, 0));
}

.indemnizable {
	color: #0e940e; /*Verde*/
	background: radial-gradient(rgba(20, 167, 20, 0.32),
		rgba(20, 167, 20, 0.05), rgba(0, 0, 0, 0));
}

.correctivo {
	color: #1e63b7; /*Azul*/
	background: radial-gradient(rgba(0, 103, 230, 0.32),
		rgba(0, 103, 230, 0.05), rgba(0, 0, 0, 0));
}

.preventivo {
	color: #1e63b7; /*Azul*/
	background: radial-gradient(rgba(0, 103, 230, 0.32),
		rgba(0, 103, 230, 0.05), rgba(0, 0, 0, 0));
}

.Solicitud_b2b_b2b2c {
	color: #b6bb0d; /*Amarillo*/
	background: radial-gradient(rgba(238, 249, 25, 0.55),
		rgba(241, 255, 30, 0.10), rgba(0, 0, 0, 0));
}

.Asistencia {
	color: #ff4500; /*Naranja*/
	background: radial-gradient(rgba(255, 140, 0, 0.55),
		rgba(255, 165, 0, 0.10), rgba(0, 0, 0, 0));
}

.Manitas {
	color: #870090; /*Violeta*/
	background: radial-gradient(rgba(135, 0, 144, 0.55),
		rgba(135, 0, 144, 0.10), rgba(0, 0, 0, 0));
}

.Servicio_Especial_Reparable {
	color: #7b3f00; /*Marrón*/
	background: radial-gradient(rgba(123, 63, 0, 0.55),
		rgba(123, 63, 0, 0.10), rgba(0, 0, 0, 0));
}

