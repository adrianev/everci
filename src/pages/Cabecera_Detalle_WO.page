<apex:page standardController="WorkOrder">
	<style>
		.cabecera {
			font-weight: bold;
			font-size: 1.3em;
			width: 100%;
			text-align: Center;
			margin: 10px 0 10px 0;
			padding: 10px 0 10px 0;
		}
		
		.revision{
			color: #de1a1a;
			background: radial-gradient(rgba(255, 0, 0, 0.32), rgba(255, 0, 0, 0.05), rgba(0,0,0,0));
		}
		
		.reclamacion{
			color: #de1a1a;
			background: radial-gradient(rgba(255, 0, 0, 0.32), rgba(255, 0, 0, 0.05), rgba(0,0,0,0));
		}
		
		.siniestro{
			color: #de1a1a;
			background: radial-gradient(rgba(255, 0, 0, 0.32), rgba(255, 0, 0, 0.05), rgba(0,0,0,0));
		}
		
		.b2b{
			color: #de1a1a;
			background: radial-gradient(rgba(255, 0, 0, 0.32), rgba(255, 0, 0, 0.05), rgba(0,0,0,0));
		}
		
	</style>
	<apex:form styleClass="cabecera revision"
		rendered="{!('WorkOrder:'+WorkOrder.RecordType.DeveloperName) == $Label.RT_OTR_EN_REVISION}">
		<apex:outputText value="{!$ObjectType.WorkOrder.label} en revisión"/>
	</apex:form>
	<apex:form styleClass="cabecera reclamacion"
		rendered="{!('Case:'+WorkOrder.Case.RecordType.DeveloperName) == $Label.RT_CAS_RECLAMACION}">
		<apex:outputText value="{!$ObjectType.WorkOrder.label} de reclamación"/>
	</apex:form>
	<apex:form styleClass="cabecera siniestro"
		rendered="{!('Case:'+WorkOrder.Case.RecordType.DeveloperName) == $Label.RT_CAS_SINIESTRO}">
		<apex:outputText value="{!$ObjectType.WorkOrder.label} de siniestro"/>
	</apex:form>
	<apex:form styleClass="cabecera b2b"
		rendered="{!('Case:'+WorkOrder.Case.RecordType.DeveloperName) == $Label.RT_CAS_B2B_B2B2C}">
		<apex:outputText value="{!$ObjectType.WorkOrder.label} de B2B"/>
	</apex:form>

</apex:page>